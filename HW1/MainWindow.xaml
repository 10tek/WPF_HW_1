        <StackPanel Grid.ColumnSpan="4" Background="Gray" Margin="0,50,0,0" Grid.RowSpan="2"/>
        <StackPanel Grid.Row="2" Grid.Column="0" Background="LightGray">
            <Button Height="20" Content="C#/.NET"></Button>
