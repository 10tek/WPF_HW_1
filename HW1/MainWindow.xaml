            <Button Width="65" Content="SWIFT"></Button>
            <Button Width="65" Content="KOTLIN"></Button>
            <Button Width="65" Content="DART"></Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="3" Background="LightGray" >
            <MediaElement Source="Ad.mp4"></MediaElement>
            <Label Margin="0,200,0,0" Content="ПАМАГИТИ"/>
            <Label Content="QIWI: +77786226134"/>
            <Label Content="Kaspi: +77786226134"></Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label Content="О сайте" FontSize="40"></Label>
            <Label Content="БЛа бла бля"></Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <Label Content="Что нового" FontSize="40"></Label>
            <Label Content="БЛа бла Обновлено."></Label>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="4" Background="LightGray" Orientation="Horizontal">
            <Button Content="Вконтакте" Margin="350,0,0,30" Height="17"></Button>
            <Button Content="Телеграм" Margin="0,0,0,30" Height="17"></Button>
            <Button Content="Youtube" Margin="0,0,0,30" Height="17"></Button>
            <Button Content="Twitter" Margin="0,0,0,30" Height="17"></Button>
            <Button Content="Помощь сайту" Margin="0,0,0,30" Height="17"></Button>
        </StackPanel>
        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="300,30,0,0" Content="Права под защитой. Copyright(C)"></Label>
    </Grid>
</Window>
