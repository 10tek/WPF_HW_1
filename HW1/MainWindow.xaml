            <Button Height="20" Content="C/C++"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="Gray" Orientation="Horizontal">
            <Button Width="65" Content="C#/.NET"></Button>
            <Button Width="65" Content="Java"></Button>
            <Button Width="65" Content="WEB"></Button>
            <Button Width="65" Content="Python"></Button>
            <Button Width="65" Content="C/C++"></Button>
            <Button Width="65" Content="SQL"></Button>
            <Button Width="65" Content="MONGODB"></Button>
            <Button Width="65" Content="GO"></Button>
